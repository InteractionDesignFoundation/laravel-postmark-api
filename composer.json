{
    "name": "mateusjunges/laravel-postmark-api",
    "description": "A Postmark API Client for Laravel projects",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Junges\\Postmark\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Junges\\Postmark\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "mateusjunges",
            "email": "mateus@junges.dev"
        }
    ],
    "require": {
        "php": "^8.2",
        "psr/http-client": "^1.0.1",
        "php-http/multipart-stream-builder": "^1.2",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "symfony/http-client": "^6.1",
        "orchestra/testbench": "^7.9|^8.0",
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.8",
        "vimeo/psalm": "^4.28"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Junges\\Postmark\\Providers\\PostmarkServiceProvider"
            ]
        }
    },
  "minimum-stability": "dev",
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  }
}
